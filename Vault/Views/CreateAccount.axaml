<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Vault.Views.CreateAccount">

    <StackPanel>
        <TextBlock Text="Create Account Page" />
        <TextBox x:Name="FirstName" Watermark="First Name"/>
        <TextBox x:Name="LastName" Watermark="Last Name" />
        <TextBox x:Name="Username" Watermark="Username" />
        <TextBox x:Name="Password" Watermark="Password" />
        <Button Content="Submit" Click="SubmitInfo" />
    </StackPanel>

</UserControl>